<body>
    <header>
        <nav>
            <div class="nav-container">
                <label class="logo"><a href="/locations">TourSpot</a></label>
                <ul class="nav-menu">
                    <%if (!currentUser) {%>
                        <li><a href="/users/login">Login</a></li>
                        <li><a href="/users/register">Sign Up</a></li>
                        <% }else{ %>
                            <li>
                                <a href="#">
                                    <%= currentUser.username %>
                                </a>
                            </li>
                            <li><a href="/users/logout">Logout</a></li>
                            <%}%>
                </ul>
            </div>
            <button id="navBtn">
            <div class="hamburger-menu">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
        </button>
        </nav>